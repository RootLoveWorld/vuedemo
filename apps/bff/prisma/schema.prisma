// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users      User[]
  workflows  Workflow[]
  executions Execution[]
  plugins    Plugin[]

  @@map("tenants")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user") // admin, user, viewer
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  workflows   Workflow[]
  executions  Execution[]
  permissions Permission[]

  @@index([tenantId])
  @@index([email])
  @@index([role])
  @@map("users")
}

model Permission {
  id        String   @id @default(uuid())
  resource  String   // workflow, execution, plugin, etc.
  action    String   // create, read, update, delete, execute
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, resource, action])
  @@index([userId])
  @@map("permissions")
}

model Workflow {
  id          String   @id @default(uuid())
  name        String
  description String?
  definition  Json     // WorkflowDefinition
  version     Int      @default(1)
  isActive    Boolean  @default(true)
  isPublic    Boolean  @default(false)
  tags        String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  userId     String
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  executions Execution[]
  versions   WorkflowVersion[]

  @@index([tenantId])
  @@index([userId])
  @@index([isActive])
  @@map("workflows")
}

model WorkflowVersion {
  id         String   @id @default(uuid())
  version    Int
  definition Json
  changelog  String?
  createdAt  DateTime @default(now())

  workflowId String
  workflow   Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@unique([workflowId, version])
  @@index([workflowId])
  @@map("workflow_versions")
}

model Execution {
  id           String    @id @default(uuid())
  status       String    // pending, running, completed, failed, cancelled
  inputData    Json?
  outputData   Json?
  errorMessage String?
  startedAt    DateTime?
  completedAt  DateTime?
  duration     Int?      // Duration in milliseconds
  createdAt    DateTime  @default(now())

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  workflowId String
  workflow   Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  logs ExecutionLog[]

  @@index([tenantId])
  @@index([workflowId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("executions")
}

model ExecutionLog {
  id        String   @id @default(uuid())
  nodeId    String?
  level     String   // info, warning, error
  message   String
  metadata  Json?
  createdAt DateTime @default(now())

  executionId String
  execution   Execution @relation(fields: [executionId], references: [id], onDelete: Cascade)

  @@index([executionId])
  @@map("execution_logs")
}

model Plugin {
  id          String   @id @default(uuid())
  name        String
  version     String
  author      String
  description String
  category    String   // integration, ai, data, utility, custom
  icon        String?
  manifest    Json     // PluginManifest
  isInstalled Boolean  @default(false)
  isActive    Boolean  @default(false)
  downloads   Int      @default(0)
  rating      Float?
  fileUrl     String?  // URL to plugin file in storage
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, name, version])
  @@index([tenantId])
  @@index([category])
  @@index([isInstalled])
  @@map("plugins")
}
