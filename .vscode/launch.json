{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug BFF",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["--filter", "bff", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Frontend",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/frontend",
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/src/*"
      }
    },
    {
      "type": "python",
      "request": "launch",
      "name": "Debug AI Service",
      "program": "${workspaceFolder}/apps/ai-service/app/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/ai-service",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/apps/ai-service"
      }
    }
  ]
}
