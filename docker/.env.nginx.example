# Nginx Reverse Proxy Configuration
# Copy this file to .env.nginx and update with your values

# Domain Configuration
DOMAIN_NAME=localhost
# For production, use your actual domain:
# DOMAIN_NAME=workflow.example.com

# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443

# SSL Certificate Paths
# For development with self-signed certificates:
SSL_CERT_PATH=./ssl
# For production with Let's Encrypt:
# SSL_CERT_PATH=/etc/letsencrypt/live/${DOMAIN_NAME}

# Certbot Configuration (for Let's Encrypt)
CERTBOT_PATH=./certbot/www
CERTBOT_EMAIL=admin@example.com

# Database Configuration
POSTGRES_USER=workflow
POSTGRES_PASSWORD=workflow_password
POSTGRES_DB=workflow_db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Ollama Configuration
OLLAMA_PORT=11434

# AI Service Configuration
AI_SERVICE_PORT=8000
AI_SERVICE_WORKERS=4
LOG_LEVEL=INFO

# BFF Configuration
BFF_PORT=3001
JWT_SECRET=change-me-in-production-use-long-random-string
JWT_EXPIRES_IN=7d
CORS_ORIGIN=https://localhost

# Frontend Configuration
FRONTEND_PORT=3000

# Node Environment
NODE_ENV=production
